@{
    Layout = "Layout";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model  neatBurger.Models.ViewModels.PromocionesVm
<section class="menu1">
    
    <img src="~/hamburguesas/@(Model.Id).png" asp-append-version/>
    <div class="datos">
        <h3>
            <del>$@Model.Precio</del>
            <b>$@Model.PrecioPromo</b>
        </h3>
        <h2>@Model.Nombre</h2>
        <p>@Model.Descripcion</p>
    </div>
    <span>
        <a href="~/promociones/@Model.AnteriorPromo.ToLower().Replace(" ","_")">&lt;</a>
        <a href="~/promociones/@Model.SiguientePromo.ToLower().Replace(" ","_")">&gt;</a>
    </span>
</section>